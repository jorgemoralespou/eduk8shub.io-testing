{{#workshops}}
<a href="{{ id }}" class="index-anchor" id="{{id}}">
    <div class="labcard-tile" id="{{id}}">

        {{ if img }}
        <img class="labcard-tile-image" src="{{web.site.baseUrl}}/images/{{img}}" alt="{{title}}">
        {{ else }}
        <img class="labcard-tile-image" src="{{web.site.baseUrl}}/images/{{web.page.defaultImage}}" alt="{{title}}">
        {{ end }}
        <span class="labcard-tile-body labcard-tile-metadata labcard-tile-pull-right">
            {{ if template }}<small><i class="fa fa-file" aria-hidden="true"></i>
                <!--<b>Template</b>--></small>{{ end }}
            {{ if test }}<small><i class="fa fa-wrench" aria-hidden="true"></i>
                <!--<b>Testing</b>--></small>{{ end }}
        </span>

        <div class="labcard-tile-body">
            <h3 class="labcard-tile-title-text">{{ title | truncate 25 }}</h3></span>
        </div>

        <div class="labcard-tile-body">
            <span class="labcard-tile-title-text">{{ if duration }}<small><i class="fa fa-hourglass-half "
                        aria-hidden="true"></i></small>&nbsp;&nbsp;{{ duration }}{{ end }}</span>
            <span class="labcard-tile-metadata"><small>{{ .Date.Format "January 2, 2006" }}</small></span>
        </div>

        {{ if description }}
        <div class="labcard-tile-summary-text">
            <small>{{ description | plainify | truncate 80 }}</small>
        </div>
        {{ else }}
        <div class="labcard-tile-summary-text">
            <small>{{ summary | plainify | truncate 80 }}</small>
        </div>
        {{ end }}
    </div>
</a>
{{/workshops}}